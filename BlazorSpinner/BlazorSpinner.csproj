<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
	  <TargetFramework>net7.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="7.0.3" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.3" />
  </ItemGroup>

  <PropertyGroup>
    <Version>1.4.1</Version>
    <Authors>shadowlings</Authors>
    <PackageReleaseNotes>v1.4.1: Updated to .NET 7. Updated license and repo URL's to organization.</PackageReleaseNotes>
    <Description>BlazorSpinner is a loading spinner that can be included in Blazor applications. It has a simple service that can be called to "show" or "hide" the spinner.</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	<License>https://github.com/shadowlings/blazorspinner/blob/master/LICENSE</License>
    <RepositoryUrl>https://github.com/shadowlings/blazorspinner</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <Copyright>Copyright (c) 2023 Shadowlings</Copyright>
    <PackageTags>blazor,spinner,loading</PackageTags>
  </PropertyGroup>

</Project>
